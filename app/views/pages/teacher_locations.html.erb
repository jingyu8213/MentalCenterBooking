<style type="text/css">
  td{text-align: center}
  th{text-align: center}
</style>
<hr style="width:1000PX;">
<h3>Locations</h3>
<% if current_teacher.locations.any? %>
  <table>
    <thead>
    <tr>
      <th>&nbspPlace&nbsp&nbsp&nbsp&nbsp</th>
      <th>&nbsp&nbspStart Time&nbsp&nbsp&nbsp</th>
      <th>&nbsp&nbspFinish Time&nbsp&nbsp&nbsp</th>
      <th>&nbsp&nbspWeekday&nbsp&nbsp&nbsp</th>
    </tr>
    </thead>

    <tbody>
    <% current_teacher.locations[0..-2].each do |l| %>
      <tr class="locations">
        <td><%= l.place %></td>
        <td><%= l.start_time.to_formatted_s(format = :hm) %></td>
        <td><%= l.end_time.to_formatted_s(format = :hm) %></td>
        <td><%= l.weekday %></td>
        <td><%= link_to 'Destroy', l, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br/>
<% end %>
<section class="location_form">
  <%= render 'pages/location_form' %>
</section>